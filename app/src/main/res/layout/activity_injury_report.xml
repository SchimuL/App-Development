<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InjuryReportActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/injury_report_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/button_yellow"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Verletzungs-Report" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/injury_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        tools:listitem="@layout/list_item_injury" />

</LinearLayout>