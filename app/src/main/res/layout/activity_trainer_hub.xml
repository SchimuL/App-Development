<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <!-- Header Section -->
        <TextView
            android:id="@+id/trainer_welcome_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:text="Welcome Back,"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/trainer_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Coach"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/trainer_welcome_label" />

        <!-- Featured Card: Calendar Management -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_goto_calendar"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@color/fcc_blue"
            app:cardCornerRadius="24dp"
            app:layout_constraintTop_toBottomOf="@id/trainer_name_text">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="-20dp"
                    android:alpha="0.2"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/cal_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Terminkalender"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="100dp"
                    android:text="Verwalte deine Verfügbarkeit und bestätige Spieleranfragen."
                    android:textColor="#D0FFFFFF"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cal_title" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_goto_calendar_internal"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="16dp"
                    android:text="Öffnen"
                    android:textColor="@color/background_dark"
                    app:backgroundTint="@color/fcc_yellow"
                    app:cornerRadius="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Actions Grid -->
        <TextView
            android:id="@+id/actions_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:text="Schnellzugriff"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_goto_calendar" />

        <GridLayout
            android:id="@+id/trainer_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:columnCount="2"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/actions_title">

            <!-- Player Files -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_goto_player_files"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/surface_variant"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_assignment" app:tint="@color/fcc_yellow"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Spieler-Akten" android:textColor="@color/white" android:layout_marginTop="8dp" android:textStyle="bold"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Plan Creation -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_goto_plan_creation"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/surface_variant"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_add" app:tint="@color/fcc_yellow"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Pläne erstellen" android:textColor="@color/white" android:layout_marginTop="8dp" android:textStyle="bold"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Create Exercise -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_create_exercise"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/surface_variant"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_add_circle" app:tint="@color/fcc_yellow"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Neue Übung" android:textColor="@color/white" android:layout_marginTop="8dp" android:textStyle="bold"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Dashboard -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_goto_wellbeing"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/surface_variant"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_bar_chart" app:tint="@color/fcc_yellow"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dashboard" android:textColor="@color/white" android:layout_marginTop="8dp" android:textStyle="bold"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Injury Report -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_goto_injury"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/surface_variant"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_injury" app:tint="@color/fcc_yellow"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Verletzungen" android:textColor="@color/white" android:layout_marginTop="8dp" android:textStyle="bold"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Polar Center -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_goto_polar"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/surface_variant"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_upload" app:tint="@color/fcc_yellow"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Polar Center" android:textColor="@color/white" android:layout_marginTop="8dp" android:textStyle="bold"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

        <!-- Mailbox as a wide card at the bottom -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_goto_mailbox"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/surface_variant"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toBottomOf="@id/trainer_grid">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp">
                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_mailbox" app:tint="@color/fcc_yellow"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Postfach / Mitteilungen" android:textColor="@color/white" android:layout_marginStart="16dp" android:textStyle="bold"/>
                <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
                <ImageView android:layout_width="20dp" android:layout_height="24dp" android:src="@android:drawable/ic_media_next" app:tint="@color/text_secondary"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>